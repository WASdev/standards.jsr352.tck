<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>dist</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>

    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>com.ibm.jbatch.tck-${project.version}</baseDirectory>

    <dependencySets>
        <dependencySet>
            <includes>
                <include>com.ibm.jbatch:com.ibm.jbatch.tck.spi</include>
                <include>com.ibm.jbatch:com.ibm.jbatch.tck.spi:jar:sources</include>
                <include>com.ibm.jbatch:com.ibm.jbatch.tck.spi:jar:javadoc</include>
                <include>com.ibm.jbatch:com.ibm.jbatch.tck</include>
                <include>com.ibm.jbatch:com.ibm.jbatch.tck:jar:sources</include>
                <include>com.ibm.jbatch:com.ibm.jbatch.tck:jar:javadoc</include>
            </includes>
            <outputDirectory>artifacts</outputDirectory>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>javax.inject:javax.inject</include>
                <include>junit:junit</include>
                <include>org.testng:testng</include>
                <include>xmlunit:xmlunit</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <directory>../com.ibm.jbatch.tck/sigtest</directory>
            <outputDirectory>/artifacts</outputDirectory>
            <excludes>
                <exclude>.gitkeep</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../com.ibm.jbatch.tck/doc</directory>
            <outputDirectory>/doc</outputDirectory>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>../README.md</source>
            <outputDirectory>/</outputDirectory>
            <destName>README.txt</destName>
        </file>
        <file>
            <source>../LICENSE.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>../NOTICE.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>../com.ibm.jbatch.tck/testng/jsr352-tck-impl-SE-suite.xml</source>
            <outputDirectory>/artifacts</outputDirectory>
        </file>
        <file>
            <source>../com.ibm.jbatch.tck/testng/jsr352-tck-impl-EE-suite.xml</source>
            <outputDirectory>/artifacts</outputDirectory>
        </file>
        <file>
            <source>../com.ibm.jbatch.tck/testng/filtered.build.xml</source>
            <outputDirectory>/</outputDirectory>
            <destName>build.xml</destName>
        </file>
        <file>
            <source>../com.ibm.jbatch.tck/testng/jsr352-tck.properties</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
</assembly>
